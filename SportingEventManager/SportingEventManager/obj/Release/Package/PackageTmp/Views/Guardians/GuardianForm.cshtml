@model SportingEventManager.ViewModels.GuardianFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>@(Model.Guardian.Id == 0 ? "New Guardian" : "Edit " + Model.Guardian.Name)</h2>
    <div class="card card-register mx-auto mt-5">
        <div class="card-header">@(Model.Guardian.Id == 0 ? "Register Guardian" : "Edit " + Model.Guardian.Name)</div>
        <div class="card-body">

            @using (Html.BeginForm("Save", "Guardians"))
            {
                @Html.ValidationSummary(true, "Please fix the following errors.")
                <div class="form-group">
                    @Html.LabelFor(m => m.Guardian.FirstName)
                    @Html.TextBoxFor(m => m.Guardian.FirstName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Guardian.FirstName)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Guardian.LastName)
                    @Html.TextBoxFor(m => m.Guardian.LastName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Guardian.LastName)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Guardian.City)
                    @Html.TextBoxFor(m => m.Guardian.City, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Guardian.City)
                </div>
                <div>
                    @Html.LabelFor(m => m.Guardian.State)
                    @Html.TextBoxFor(m => m.Guardian.State, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Guardian.State)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Guardian.Street)
                    @Html.TextBoxFor(m => m.Guardian.Street, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Guardian.Street)
                </div>
                <div>
                    @Html.LabelFor(m => m.Guardian.Zip)
                    @Html.TextBoxFor(m => m.Guardian.Zip, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Guardian.Zip)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Guardian.PlayersIds)
                    @Html.ListBoxFor(m => m.Guardian.PlayersIds, new MultiSelectList(Model.Players, "Id", "FirstName"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Guardian.PlayersIds)
                </div>
                @Html.HiddenFor(m => m.Guardian.Id)
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-primary">Save</button>  }
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
