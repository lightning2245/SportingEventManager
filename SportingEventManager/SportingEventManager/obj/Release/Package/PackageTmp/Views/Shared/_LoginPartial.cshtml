@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

        <ul>
            <li>
                <input class="btn btn-link" id="ManageLink"
                       style="color: black"
                       type="button"
                       title="Manage"
                       value= "@("Hello " + User.Identity.GetUserName() + "!")"
                       onclick="location.href='@Url.Action(actionName: "Index",controllerName: "Manage", routeValues: null)'" 
                />                
                @*@Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })*@
            </li>
            <li>
                <input class="btn btn-link" id="ManageLink"
                       style="color: black"
                       type="button"
                       title="Manage"
                       value="Log off"
                       onclick="javascript:document.getElementById('logoutForm').submit()" 
                 />       
            @*<a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>*@
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right" >
