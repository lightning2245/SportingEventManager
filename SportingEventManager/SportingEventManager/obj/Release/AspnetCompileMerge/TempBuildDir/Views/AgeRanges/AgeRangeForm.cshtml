@model SportingEventManager.ViewModels.AgeRangeFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Age Range</h2>

@using (Html.BeginForm("Save", "AgeRanges"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")
    <div class="form-group">
        @Html.LabelFor(m => m.AgeRange.Min)
        @Html.TextBoxFor(m => m.AgeRange.Min, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.AgeRange.Min)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AgeRange.Max)
        @Html.TextBoxFor(m => m.AgeRange.Max, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.AgeRange.Max)
    </div>    
    @Html.HiddenFor(m => m.AgeRange.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>    
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
